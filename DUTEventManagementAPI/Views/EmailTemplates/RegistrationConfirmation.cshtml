@model DUTEventManagementAPI.Models.Event
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xác nhận đăng ký sự kiện</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
            background-color: #F0F9FF;
            margin: 0;
            padding: 20px;
            color: #1F2937;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .wrapper {
            max-width: 600px;
            margin: 30px auto;
            background: #FFFFFF;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.07);
        }

        .banner {
            background: linear-gradient(135deg, #93C5FD, #3B82F6);
            color: white;
            padding: 30px;
            text-align: center;
        }

            .banner h1 {
                margin: 0;
                font-size: 24px;
                font-weight: 600;
            }

        .section {
            padding: 30px;
        }

            .section h2 {
                color: #1E3A8A;
                font-size: 20px;
                margin-top: 0;
                margin-bottom: 15px;
                font-weight: 600;
            }

        .event-description {
            font-style: normal;
            background: #EFF6FF;
            padding: 12px 15px;
            border-left: 3px solid #93C5FD;
            border-radius: 4px;
            margin-bottom: 25px;
            color: #374151;
            font-size: 14px;
        }

        .info-card {
            background-color: #FFFFFF;
            border: 1px solid #DBEAFE;
            border-radius: 6px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .info-card-icon {
            font-size: 18px;
            margin-right: 15px;
            color: #3B82F6;
            width: 22px;
            text-align: center;
            padding-top: 2px;
        }

        .info-card-content {
            flex: 1;
        }

        .info-label {
            font-weight: 500;
            margin-bottom: 4px;
            color: #4B5563;
            font-size: 13px;
        }

        .info-value {
            color: #1E3A8A;
            font-size: 15px;
            font-weight: 500;
        }

        .button-container {
            text-align: center;
            margin-top: 30px;
            margin-bottom: 10px;
        }

        .action-button {
            background: linear-gradient(to right, #93C5FD, #3B82F6);
            color: white;
            text-decoration: none;
            padding: 12px 28px;
            border-radius: 25px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-block;
            box-shadow: 0 4px 12px rgba(96, 165, 250, 0.35);
            transition: all 0.3s ease;
        }

            .action-button:hover {
                background: linear-gradient(to right, #60A5FA, #2563EB);
                box-shadow: 0 6px 15px rgba(59, 130, 246, 0.4);
                transform: translateY(-1px);
            }

        .footer {
            text-align: center;
            font-size: 12px;
            color: #6B7280;
            padding: 20px;
            border-top: 1px solid #BFDBFE;
            background-color: #FFFFFF;
        }

            .footer p {
                margin: 5px 0;
            }

        @@media (max-width: 600px) {
            body {
                padding: 10px;
            }

            .wrapper {
                margin: 15px;
            }

            .section {
                padding: 20px;
            }

            .banner {
                padding: 20px 25px;
            }

                .banner h1 {
                    font-size: 20px;
                }

            .section h2 {
                font-size: 18px;
            }

            .action-button {
                padding: 10px 22px;
                font-size: 13px;
            }

            .info-card {
                padding: 12px;
            }

            .info-card-icon {
                font-size: 16px;
                margin-right: 10px;
            }

            .info-label {
                font-size: 12px;
            }

            .info-value {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="banner">
            <h1>XÁC NHẬN ĐĂNG KÝ THÀNH CÔNG</h1>
        </div>
        <div class="section">
            <h2>@Model.EventName</h2>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="event-description">@Model.Description</div>
            }

            <div class="info-card">
                <div class="info-card-icon">
                    🗓️
                </div>
                <div class="info-card-content">
                    <div class="info-label">Thời gian</div>
                    <div class="info-value">
                        @Model.StartDate.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))
                    </div>
                </div>
            </div>

            <div class="info-card">
                <div class="info-card-icon">
                    🕑
                </div>
                <div class="info-card-content">
                    <div class="info-label">Khung giờ</div>
                    <div class="info-value">
                        @Model.StartDate.ToString("HH:mm", new System.Globalization.CultureInfo("vi-VN")) -
                        @Model.EndDate.ToString("HH:mm", new System.Globalization.CultureInfo("vi-VN")) (GMT+7)
                    </div>
                </div>
            </div>

            <div class="info-card">
                <div class="info-card-icon">
                    🌎
                </div>
                <div class="info-card-content">
                    <div class="info-label">Địa điểm</div>
                    <div class="info-value">@Model.Location</div>
                </div>
            </div>

            <div class="info-card">
                <div class="info-card-icon">
                    @(Model.AttendanceType?.ToLower() == "online" ? "💻" : "🌳")
                </div>
                <div class="info-card-content">
                    <div class="info-label">Hình thức</div>
                    <div class="info-value">
                        @(Model.AttendanceType?.ToLower() == "online" ? "Trực tuyến" : "Trực tiếp")
                    </div>
                </div>
            </div>

            <div class="button-container">
                <a href="http://localhost:5044/swagger/index.html" class="action-button">Vé của tôi</a>
            </div>
        </div>

        <div class="footer">
            <p>Email này được gửi tự động từ Hệ thống Quản lý Sự kiện DUT.</p>
            <p>Thời gian gửi: @DateTime.Now.ToString("dddd, dd MMMM yyyy HH:mm", new System.Globalization.CultureInfo("vi-VN"))</p>
        </div>
    </div>
</body>
</html>
